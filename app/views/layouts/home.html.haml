!!!
%html
  %head
    %title Ruckapp
    
    = stylesheet_link_tag "social-buttons/social_buttons.css"
    
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'home.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery", "jquery.colorbox-min", "application"
    :erb
      <link href='http://fonts.googleapis.com/css?family=Carter+One' rel='stylesheet' type='text/css'>
      <link href='http://fonts.googleapis.com/css?family=Orbitron' rel='stylesheet' type='text/css'>
      <link href='http://fonts.googleapis.com/css?family=Coda+Caption:800' rel='stylesheet' type='text/css'>  
  %body.home
    #header-strip
    #container
      #header 
        %h1 RUCKAPP
      #subheader
        = yield :subheader
      #content
        = yield :content
      #sidebar
        = yield :sidebar
    #footer-strip
