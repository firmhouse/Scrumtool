<h2>Sign in</h2>

<p style="display: inline-block;">
  <%= link_to user_omniauth_authorize_path(:twitter), :class => "social_buttons sb_24 sb_twitter" do %>
    <span>Sign in with Twitter</span>
  <% end -%>
</p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="input text"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="input text"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="input checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="input submit"><%= f.submit "Sign in" %></div>
<% end %>